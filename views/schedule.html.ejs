<script>
// Add-a-new-activity function

var formShow = false;

$("#add").click(function(){
	if (formShow == false){
		$("#add-form").show();
		formShow = true;
			}
	else{	
		$("#add-form").hide();
		formShow = false;
	}
});


$("#reset").click(function(){
	alert("Your schedule will be reset.");
})

</script>

